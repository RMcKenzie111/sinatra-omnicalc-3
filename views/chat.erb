<dl>
  <% @chat_history.each do |entry|%>
    <dt><%= entry["role"] %></dd>
    <dd><%= entry["content"] %></dd>
  <% end %>
</dl>

<form action="/chat_messages" method="post">
  <label for="user_messages">
      Your message:
  </label>
  <input id="user_messages" type="text" name="the_messages">

  <button>
    Submit
  </button>
</form>

<hr>
<form action="/clear_chat" method="post">
  <button>
    Clear chat history
  </button>
</form>
